acl internals {
    127.0.0.0/8;
    {{ kubeinit_inventory_network_net }}/{{ kubeinit_inventory_network_cidr }};
};

view "internal" {
    match-clients { internals; };

    include "/etc/named.rfc1912.zones";

    zone "." IN {
        type hint;
        file "named.ca";
    };

    zone "{{ kubeinit_common_cluster_name }}.{{ kubeinit_common_cluster_domain }}" {
        type master;
        file "/etc/named/zones/internals/db.{{kubeinit_common_cluster_name}}.{{ kubeinit_common_cluster_domain }}"; # zone file path
    };

    zone "{{ hostvars[groups['all'] | map('regex_search','^.*(service).*$') | select('string') | list | first].ansible_host | ipaddr('revdns') | regex_replace('^[0-9]+\\.', '') }}" {
        type master;
        file "/etc/named/zones/internals/db.{{ hostvars[groups['all'] | map('regex_search','^.*(service).*$') | select('string') | list | first].ansible_host | ipsubnet(24) | ipaddr('network') }}";  # 192.168.1.0/24 subnet
    };

};

{% if kubeinit_libvirt_external_service_interface_enabled | default(false) %}

view "external" {
    match-clients { any; };
    allow-query { any; };

    zone "{{ kubeinit_common_cluster_name }}.{{ kubeinit_common_cluster_domain }}" {
        type master;
        file "/etc/named/zones/externals/db.{{kubeinit_common_cluster_name}}.{{ kubeinit_common_cluster_domain }}"; # zone file path
    };

};

{% endif %}
