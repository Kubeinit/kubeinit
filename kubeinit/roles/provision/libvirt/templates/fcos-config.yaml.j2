    - path: /etc/hostname
      overwrite: true
      contents:
        inline: {{ item }}.{{ kubeinit_provision_cluster_domain }}
    - path: /etc/hosts
      overwrite: true
      contents:
        inline: |
          127.0.0.1 $fqdn $hostname
          127.0.0.1 localhost.localdomain localhost
          127.0.0.1 localhost4.localdomain4 localhost4

          # The following lines are desirable for IPv6 capable hosts
          ::1 $fqdn $hostname
          ::1 localhost.localdomain localhost
          ::1 localhost6.localdomain6 localhost6

{% for host in groups['okd_master_nodes'] + groups['okd_worker_nodes'] + groups['okd_service_nodes'] + groups['okd_bootstrap_nodes'] %}
          {{ hostvars[host].ansible_host }} {{ host }}.{{kubeinit_provision_cluster_name}}.{{ kubeinit_provision_cluster_domain }} {{ host }}
{% endfor %}

    - path: /etc/ssh/sshd_config.d/20-enable-passwords.conf
      mode: 0644
      contents:
        inline: |
          # Fedora CoreOS disables SSH password login by default.
          # Enable it.
          # This file must sort before 40-disable-passwords.conf.
          PasswordAuthentication yes
