[hypervisor-nodes]
hypervisor-01 ansible_host=nyctea ansible_ssh_common_args='-o StrictHostKeyChecking="no"'

[okd-master-nodes]
okd-master-01 ansible_host=10.0.0.1 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'
okd-master-02 ansible_host=10.0.0.2 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'
okd-master-03 ansible_host=10.0.0.3 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'

# From .4 to .99 worker nodes
[okd-worker-nodes]
okd-worker-01 ansible_host=10.0.0.4 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'
okd-worker-02 ansible_host=10.0.0.5 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'
okd-worker-03 ansible_host=10.0.0.6 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'
okd-worker-04 ansible_host=10.0.0.7 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'

# From .100 to .109 bootstrap nodes
[okd-bootstrap-nodes]
okd-bootstrap-01 ansible_host=10.0.0.100 ansible_ssh_common_args='-o StrictHostKeyChecking="no" -o ProxyCommand="ssh -W %h:%p root@nyctea"'

# From .110 to .119 service nodes
